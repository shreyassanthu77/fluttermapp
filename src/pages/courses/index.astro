---
import Layout from "../../components/Layout.astro";
import { courses } from "./_courses";
---

<Layout title="Courses | %s">
  <main class="container mx-auto px-4 py-6 min-h-[77vh]">
    <h1 class="text-4xl font-bold">Courses</h1>

    {
      courses.map((course) => (
        <div class="bg-white shadow-md rounded-md overflow-hidden my-4">
          <div class="md:flex">
            <div class="md:flex-shrink-0">
              <img
                class="h-full object-cover md:w-48"
                src={course.image.src}
                alt={course.image.alt}
              />
            </div>
            <div class="p-8">
              <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold">
                {course.title}
              </div>
              <a
                href={`/courses/${course.slug}`}
                class="block mt-1 text-lg leading-tight font-medium text-black hover:underline"
              >
                {course.tagline}
              </a>
              <p class="mt-2 text-gray-500">{course.description}</p>
              <div class="mt-4">
                <span class="text-2xl font-bold">${course.price.discount}</span>
                <span class="text-gray-500 line-through ml-2">
                  ${course.price.original}
                </span>
              </div>
              <a
                href={`/courses/${course.slug}`}
                class="mt-4 block max-w-max bg-indigo-500 px-6 py-4 text-sm font-semibold text-white rounded-md hover:bg-indigo-600"
              >
                Learn More
              </a>
            </div>
          </div>
        </div>
      ))
    }
  </main>
</Layout>
